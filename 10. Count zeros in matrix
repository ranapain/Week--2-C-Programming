#include <stdio.h>

int main() {
    int rows, cols, count = 0;
    printf("Enter rows and columns: ");
    scanf("%d %d", &rows, &cols);

    int a[10][10];
    printf("Enter matrix elements:\n");
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < cols; j++) {
            scanf("%d", &a[i][j]);
            if (a[i][j] == 0)  // count zeros directly
                count++;
        }
    }

    printf("Number of zeros in matrix = %d\n", count);
    return 0;
}
